{
    "compilerOptions": {
        "outDir": "./out/",
        "module": "ES2015",
        "target": "ES6",
        "allowJs": false,
        "jsx": "react",
        "sourceMap": true,
        "allowSyntheticDefaultImports": true,
        "moduleResolution": "Node",
        "baseUrl": "./",
        "noUnusedLocals": true,
        "paths": {
            "*": ["./src/*"]
        }
    },
    "include": [
        "src/**/*",
    ],
}
